{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "app/*": ["app/*"],
      "lib/*": ["src/lib/*"],
      "assets": ["assets/*"],
      "utils/*": ["src/utils/*"],
      "hooks/*": ["src/hooks/*"],
      "typings/*": ["src/types/*"],
      "helpers/*": ["src/helpers/*"],
      "layouts/*": ["src/layouts/*"],
      "contexts/*": ["src/contexts/*"],
      "constants/*": ["src/constants/*"],
      "components/*": ["src/components/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "contexts/AuthContext.tsxs"
  ]
}
